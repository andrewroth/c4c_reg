<%= link_to 'Cancel and go back', return_or_back_url %>

<h2>Editing Scholarship</h2>

<% form_for(@scholarship) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :source_account %><br />
    <%= f.text_field :source_account %>
  </p>
  <p>
    <%= f.label :source_description %><br />
    <%= f.text_field :source_description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Cancel and go back', return_or_back_url %>